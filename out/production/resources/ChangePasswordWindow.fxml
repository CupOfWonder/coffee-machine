<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane styleClass="root" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.parcel.coffee.controller.ChangePasswordController" onKeyPressed="#onKey">
    <children>
        <Label styleClass="header" text="Вход в панель администрирования" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER">
            <HBox alignment="CENTER" styleClass="login-form-cell">
                <Label styleClass="login-form-label">Логин:</Label>
                <Pane minWidth="40" />
                <TextField styleClass="login-form-field"/>
            </HBox>
            <HBox  alignment="CENTER">
                <Label styleClass="login-form-label">Пароль:</Label>
                <Pane minWidth="40" />
                <PasswordField styleClass="login-form-field"/>
            </HBox>
        </VBox>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="35.0" vgrow="ALWAYS" />
        <RowConstraints percentHeight="35.0" vgrow="ALWAYS" />
    </rowConstraints>
</GridPane>

